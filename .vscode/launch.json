{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug CLI",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["sarvesh,","10","pradnya", "15"],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug with Different Args",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["--verbose", "20", "30"],
            "env": {
                "DEBUG": "true"
            }
        },
        {
            "name": "Debug Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "args": ["-v"]
        }
    ]
}